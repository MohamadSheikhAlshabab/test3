<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles/style.css">
    <title>Home</title>
</head>

<body>
    <header>
        <h1>
            HOME PAGE
        </h1>
        <nav>
            <a href="/">HOME</a>
            <a href="/selectData">FAV</a>
        </nav>
    </header>

    <main>
        <div class="all">
            <%data.forEach(val=>{%>
            <div class="container">
                <h3>NAME : <%=val.name%></h3>
                <img src="<%=val.img%>" alt="<%=val.name%>">
                <p>LEVEL : <%=val.level%></p>

                <div>
                    <button class="add">toggle</button>
                    <form action="/addDb" method="get" class="form">
                        <input type="text" value="<%=val.name%>" name="name"><br>
                        <input type="text" value="<%=val.img%>" name="img"> <br>
                        <input type="text" value="<%=val.level%>" name="level"><br>
                        <input type="submit" value="ADD">
                    </form>
                </div>
            </div>
            <%})%>
        </div>
    </main>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="../../js/app.js"></script>
</body>

</html>